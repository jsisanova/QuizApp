<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowBackground</item>
    </style>

    <!-- Horizontal divider style -->
    <style name="HorizontalDividerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <!-- Normal text style -->
    <style name="NormalTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <!-- Style for text input -->
    <style name="TextInputStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">35dp</item>
        <item name="android:layout_marginRight">35dp</item>
    </style>

    <!-- Style for map and dish image in quiz -->
    <style name="QuizImageStyle">
        <item name="android:layout_width">220dp</item>
        <item name="android:layout_height">160dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <!-- Style for CheckBox and RadioButton -->
    <style name="CheckBoxAndRadioButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">35dp</item>
        <item name="android:paddingLeft">15dp</item>
    </style>

    <!-- Style for LinearLayout - CheckBox and RadioButton direct parent  -->
    <style name="DirectParentOfCheckBoxAndRadioButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <!-- Style for LinearLayout - RadioButton with flag image direct parent  -->
    <style name="DirectParentOfRadioButtonWithFlag">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <!-- Style for flag image -->
    <style name="FlagImageStyle">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">35dp</item>

    </style>
</resources>
